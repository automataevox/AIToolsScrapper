{
    "title": "AI Tools Directory Scraper Input",
    "type": "object",
    "schemaVersion": 1,
    "properties": {
        "startUrls": {
            "title": "Start URLs",
            "type": "array",
            "description": "List of URLs to start scraping from. Leave empty to use default URLs from TheresAnAIForThat, FutureTools, and ProductHunt.",
            "editor": "requestListSources",
            "default": [
                {
                    "url": "https://theresanaiforthat.com/leaderboard/"
                },
                {
                    "url": "https://theresanaiforthat.com/leaderboard/year/2025"
                },
                {
                    "url": "https://theresanaiforthat.com/leaderboard/year/2024"
                }
            ],
            "prefill": [
                {
                    "url": "https://theresanaiforthat.com/leaderboard/"
                },
                {
                    "url": "https://theresanaiforthat.com/leaderboard/year/2025"
                },
                {
                    "url": "https://theresanaiforthat.com/leaderboard/year/2024"
                }
            ]
        },
        "maxItems": {
            "title": "Max Items",
            "type": "integer",
            "description": "Maximum number of AI tools to scrape. Use 0 for unlimited (not recommended).",
            "minimum": 0,
            "default": 1000,
            "prefill": 1000
        },
        "proxyConfiguration": {
            "title": "Proxy Configuration",
            "type": "object",
            "description": "Configure proxy settings to avoid blocking. Residential proxies recommended for best results.",
            "editor": "proxy",
            "default": {
                "useApifyProxy": true
            },
            "prefill": {
                "useApifyProxy": true
            }
        }
    },
    "required": []
}
